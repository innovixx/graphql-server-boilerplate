{
  "name": "graphql-server-boilerplate",
  "version": "0.0.0",
  "description": "This GraphQL server boilerplate provides a basic structure for building servers.",
  "repository": "git@github.com:innovixx/graphql-server-boilerplate.git",
  "author": "Innovixx <support@innovixx.co.uk>",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "serve": "node ./dist/index.js",
    "cleanDev": "pnpm db:reset && tsx ./src/seed/index.ts && pnpm dev",
    "codegen": "graphql-codegen --config codegen.ts",
    "db:migrate:main": "npx prisma migrate dev --schema './databases/maindb/schema.prisma'",
    "db:migrate:main:prod": "npx prisma migrate deploy --schema './databases/maindb/schema.prisma'",
    "db:reset": "npx prisma migrate reset --force --schema './databases/maindb/schema.prisma'",
    "lint": "eslint ./src/**/*.{graphql,js,jsx,ts,tsx}",
    "lint-staged": "lint-staged --verbose",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.1",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.1",
    "@prisma/client": "^6.13.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.8",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.7.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.0.0",
    "lodash.merge": "^4.6.2",
    "prisma": "6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-eslint/eslint-plugin": "^4.4.0",
    "@innovixx/eslint-config": "^3.0.10",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^5.0.0",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^20.17.3",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.24.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.4",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "**/*.graphql": [
      "eslint --fix"
    ],
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --quiet",
      "bash -c tsc"
    ]
  }
}